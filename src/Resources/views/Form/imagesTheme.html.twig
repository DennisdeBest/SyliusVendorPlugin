{% extends '@SyliusAdmin/Form/imagesTheme.html.twig' %}

{% block _odiseo_vendor_logoFile_widget %}
    {% apply spaceless %}
        {% if form.parent.vars.value.logoName|default(null) is not null %}
            <img class="ui small bordered image" src="{{ form.parent.vars.value.logoName|imagine_filter('odiseo_sylius_vendor_plugin_logo') }}" alt="{{ form.parent.vars.value.name }} Logo" />
        {% endif %}

        {{ block('form_widget') }}
    {% endapply %}
{% endblock %}
