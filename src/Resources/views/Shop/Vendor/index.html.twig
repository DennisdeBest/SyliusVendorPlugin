{% extends '@SyliusShop/layout.html.twig' %}

{% block title %}{{ 'odiseo_sylius_vendor_plugin.ui.vendors'|trans }} - {{ parent() }}{% endblock %}

{% block content %}
    <div class="ui breadcrumb">
        <a href="{{ path('sylius_shop_homepage') }}" class="section">{{ 'sylius.ui.home'|trans }}</a>
        <div class="divider"> / </div>
        <div class="active section">
            {{ 'odiseo_sylius_vendor_plugin.ui.vendors'|trans }}
        </div>
    </div>

    <h1 class="ui monster section dividing header">
        {{ 'odiseo_sylius_vendor_plugin.ui.vendors'|trans }}
    </h1>

    <div class="ui grid">
        <div class="doubling six column row" id="odiseo-vendors">
            {% include '@OdiseoSyliusVendorPlugin/Shop/Vendor/_vendor.html.twig' with {'vendors': vendors} only %}
        </div>
    </div>
{% endblock %}
