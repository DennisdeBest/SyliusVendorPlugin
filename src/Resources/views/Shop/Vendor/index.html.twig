{% extends '@SyliusShop/layout.html.twig' %}

{% block title %}{{ 'odiseo_sylius_vendor_plugin.ui.vendors'|trans }} - {{ parent() }}{% endblock %}

{% block content %}
    <div class="ui breadcrumb">
        <a href="{{ path('sylius_shop_homepage') }}" class="section">{{ 'sylius.ui.home'|trans }}</a>
        <div class="divider"> / </div>
        <div class="active section">
            {{ 'odiseo_sylius_vendor_plugin.ui.vendors'|trans }}
        </div>
    </div>

    <h1 class="ui monster section dividing header">
        {{ 'odiseo_sylius_vendor_plugin.ui.vendors'|trans }}
    </h1>

    <div class="two mobile five column ui stretched grid" id="odiseo-vendors">
        {% for vendor in vendors %}
            <div class="column center aligned brand">
                <a href="{{ path('odiseo_sylius_vendor_plugin_shop_vendor_show', {'slug': vendor.slug} ) }}" class="ui card">
                    {% if vendor.logoName %}
                        <div class="image">
                            <img src="{{ vendor.logoName|imagine_filter('odiseo_sylius_vendor_plugin_logo') }}" alt="{{ vendor.name }}">
                        </div>
                    {% endif %}
                    <div class="content">
                        <div class="header">{{ vendor.name }}</div>
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
