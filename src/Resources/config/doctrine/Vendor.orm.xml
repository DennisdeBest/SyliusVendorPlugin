<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Odiseo\SyliusVendorPlugin\Entity\Vendor" table="odiseo_vendor">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <field name="name" type="string"/>
        <field name="slug" type="string" unique="true">
            <gedmo:slug fields="slug" unique="true"/>
        </field>
        <field name="email" type="string"/>
        <field name="logoName" type="string" column="logo_name"/>
        <field name="enabled" type="boolean"/>
        <field name="createdAt" type="datetime" column="created_at">
            <gedmo:timestampable on="create"/>
        </field>
        <field name="updatedAt" type="datetime" column="updated_at">
            <gedmo:timestampable on="update"/>
        </field>

        <many-to-many field="channels" target-entity="Sylius\Component\Channel\Model\ChannelInterface">
            <join-table name="odiseo_vendor_channels">
                <join-columns>
                    <join-column name="vendor_id" referenced-column-name="id" on-delete="CASCADE"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="channel_id" referenced-column-name="id"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <one-to-many field="products" target-entity="Sylius\Component\Product\Model\ProductInterface" mapped-by="vendor"/>
    </mapped-superclass>
</doctrine-mapping>
